<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:paddingTop="16dp"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:onClick="onClick_reset"
        android:background="@color/color_button"
        android:text="@string/reset" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/team_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="@string/A_team"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="@string/score"
                android:textColor="@color/color_socre"
                android:textSize="42sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button

                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="6dp"
                    android:background="@color/color_button"
                    android:onClick="onClick_A"
                    android:layout_weight="1"
                    android:text="@string/add3" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:background="@color/color_button"
                    android:onClick="onClick_A"
                    android:layout_weight="1"
                    android:text="@string/add2" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/color_button"
                    android:onClick="onClick_A"
                    android:layout_weight="1"
                    android:text="@string/one_point" />
            </LinearLayout>


        </LinearLayout>
<View

    android:layout_width="2dp"
    android:layout_height="295dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/team_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="@string/B_team"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="@string/score"
                android:textColor="@color/color_socre"
                android:textSize="42sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@color/color_button"
                    android:onClick="onClick_B"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:text="@string/add3" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@color/color_button"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"

                    android:onClick="onClick_B"
                    android:layout_weight="1"
                    android:text="@string/add2" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/color_button"
                    android:onClick="onClick_B"
                    android:layout_weight="1"
                    android:text="@string/one_point" />

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

</RelativeLayout>